---
import './MenuLayout.css';

const { heading } = Astro.props;
---

<main class="menu__layout--container">
    <div class="menu__layout--header">
        <a href="../">
            <button type="button" class="btn__triangle__left">
                <div class="btn__white--bg">
                    <div class="triangle_left"></div>
                </div>
            </button>
        </a>
        <div class="menu__layout--heading">
            <h1>{heading}</h1>
        </div>
        <div class="empty"></div>
    </div>
    <div class="menu__layout--main">
        <slot />
    </div>
</main>
